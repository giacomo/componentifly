<div class="counter">
    <span>Actual counter value: {{count}}</span>
    <!-- if count is 9, then span will be visible -->
    <span *if="isVisible()">
        arririved 9
    </span>

    <div class="button__group">
        <ao-button name="+1" (click)="addCounter()"></ao-button>
        <ao-button name="-1" (click)="subtractCounter()"></ao-button>
        <ao-button name="Reset" (click)="resetCounter()"></ao-button>
    </div>
</div>